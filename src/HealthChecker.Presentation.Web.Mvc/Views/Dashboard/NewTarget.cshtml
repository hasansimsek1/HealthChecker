@model NewTargetBindingModel
@{
    ViewData["Title"] = "New Target";
}

<div class="text-center mt-5">
    <h2 class="display-4">Create New Target</h2>
</div>

<div class="container mt-5" style="max-width:500px">
    <div class="row justify-content-center">

        <div class="col-md-12 align-self-center">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Url"></label>
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MonitoringInterval"></label>
                    <input class="form-control" asp-for="MonitoringInterval" />
                    <span asp-validation-for="MonitoringInterval" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </form>
        </div>

    </div>
</div>

